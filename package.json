{
  "name": "root",
  "version": "0.4.20",
  "author": "Andre Terron (https://andreterron.com)",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "publish-package": "turbo run publish-package",
    "start": "node scripts/generate-env.mjs && npm run db:migrate && npm run dev",
    "db:migrate": "tsx packages/server/src/db/migrate-local.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:drop": "drizzle-kit drop"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "drizzle-kit": "^0.20.18",
    "nanoid": "^4.0.2",
    "turbo": "^1.13.0"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.2",
    "@uiw/react-codemirror": "^4.22.0",
    "body-parser": "^1.20.2",
    "esbuild-wasm": "^0.20.2",
    "jotai": "^2.8.0",
    "jotai-scope": "^0.6.0",
    "thememirror": "^2.0.1"
  }
}
