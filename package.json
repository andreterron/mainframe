{
    "name": "root",
    "author": "Andre Terron (https://andreterron.com)",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "yarn workspace @mainframe-so/webapp run dev",
        "build": "yarn workspace @mainframe-so/webapp run build",
        "start": "node scripts/generate-env.mjs && yarn run docker:up && yarn workspace @mainframe-so/webapp run dev",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down -v --rmi=local"
    },
    "devDependencies": {
        "concurrently": "^8.2.0",
        "nanoid": "^4.0.2"
    }
}
