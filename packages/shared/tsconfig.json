{
  "display": "Shared",
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "es2016",
    "module": "ESNext",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ]
}
